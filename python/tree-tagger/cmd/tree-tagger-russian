#!/bin/sh

# Set these paths appropriately

BIN=/Users/cybor/Sites/3n-tools/python/tree-tagger/bin
CMD=/Users/cybor/Sites/3n-tools/python/tree-tagger/cmd
LIB=/Users/cybor/Sites/3n-tools/python/tree-tagger/lib

OPTIONS="-token -lemma -sgml"

TOKENIZER=${CMD}/utf8-tokenize.perl
TAGGER=${BIN}/tree-tagger
PARFILE=${LIB}/russian-utf8.par

# do tokenization
$TOKENIZER $* |
$TAGGER $OPTIONS $PARFILE
